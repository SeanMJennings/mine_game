{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Open Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${relativeFileDirname}"],
            "justMyCode": true
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
        }
    ]
}